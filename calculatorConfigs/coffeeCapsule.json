{
  "title": "Bereken je Besparing met Herbruikbare Koffiecapsules",
  "description": "Bereken hoeveel geld, tijd en CO‚ÇÇ je kunt besparen door over te stappen van wegwerpkoffiecapsules naar herbruikbare capsules.",
  "inputs": [
    {
      "id":"coffees_per_day",
      "label":"Aantal koffies per dag",
      "type":"slider",
      "default":3,
      "min":1,
      "max":20,
      "step":1,
      "hint":"Hoeveel kopjes koffie drink je gemiddeld per dag?",
      "required":true
    },
    {
      "id":"reusable_set_price",
      "label":"Prijs van een set herbruikbare capsules (‚Ç¨)",
      "type":"number",
      "default":20,
      "min":5,
      "max":100,
      "step":0.5,
      "hint":"Wat kost een set van herbruikbare capsules?",
      "required":false
    },
    {
      "id":"capsules_in_set",
      "label":"Aantal capsules in de set",
      "type":"number",
      "default":3,
      "min":1,
      "max":10,
      "step":1,
      "hint":"Aantal capsules per set.",
      "required":false
    },
    {
      "id":"capsule_lifespan",
      "label":"Levensduur herbruikbare capsule (aantal keer gebruik)",
      "type":"slider",
      "default":1000,
      "min":100,
      "max":2000,
      "step":50,
      "hint":"Hoeveel keer kun je een herbruikbare capsule gebruiken?",
      "required":false
    },
    {
      "id":"disposable_capsule_price",
      "label":"Prijs per wegwerpcapsule (‚Ç¨)",
      "type":"number",
      "default":0.3,
      "min":0.2,
      "max":1.0,
      "step":0.01,
      "hint":"Wat betaal je per wegwerpcapsule?",
      "required":false
    },
    {
      "id":"coffee_price_per_kg",
      "label":"Prijs van oploskoffie per kg (‚Ç¨)",
      "type":"number",
      "default":25,
      "min":5,
      "max":80,
      "step":0.5,
      "hint":"De gemiddelde prijs van de oploskoffie die je gebruikt.",
      "required":false
    },
    {
      "id":"grams_per_capsule",
      "label":"Gram koffie per capsule (g)",
      "type":"slider",
      "default":2,
      "min":1,
      "max":10,
      "step":0.1,
      "hint":"Hoeveel gram oploskoffie doe je gemiddeld in √©√©n capsule?",
      "required":false
    },
    {
      "id":"time_per_capsule",
      "label":"Tijd om √©√©n capsule te vullen (seconden)",
      "type":"number",
      "default":20,
      "min":10,
      "max":120,
      "step":1,
      "hint":"Hoeveel seconden kost het om een capsule te vullen?",
      "required":false
    }
  ],
  "calculations": [
    {"id":"reusable_cost_per_cup","formula":"(coffee_price_per_kg * grams_per_capsule / 1000) + (reusable_set_price / (capsules_in_set * capsule_lifespan))"},
    {"id":"disposable_cost_per_cup","formula":"disposable_capsule_price"},
    {"id":"savings_per_cup","formula":"disposable_cost_per_cup - reusable_cost_per_cup"},
    {"id":"savings_per_day","formula":"savings_per_cup * coffees_per_day"},
    {"id":"savings_per_week","formula":"savings_per_day * 7"},
    {"id":"savings_per_month","formula":"savings_per_day * 30"},
    {"id":"savings_per_year","formula":"savings_per_day * 365"},
    {"id":"time_per_day_minutes","formula":"(coffees_per_day * time_per_capsule) / 60"},
    {"id":"time_per_year_hours","formula":"(time_per_day_minutes * 365) / 60"},
    {"id":"capsules_avoided_per_year","formula":"coffees_per_day * 365"},
    {"id":"waste_avoided_kg_per_year","formula":"(capsules_avoided_per_year * 3) / 1000"},
    {"id":"co2_saved_kg_per_year","formula":"waste_avoided_kg_per_year * 6"},
    {"id":"payback_days","formula":"reusable_set_price / savings_per_day"}
  ],
  "outputs": [
    {"label":"üí∞ Financi√´le Besparingen","fields":[
      {"label":"Kosten per herbruikbare capsule (‚Ç¨)","value":"reusable_cost_per_cup","precision":3},
      {"label":"Kosten per wegwerp capsule (‚Ç¨)","value":"disposable_cost_per_cup","precision":2},
      {"label":"Besparing per kopje (‚Ç¨)","value":"savings_per_cup","precision":2},
      {"label":"Besparing per jaar (‚Ç¨)","value":"savings_per_year","precision":2},
      {"label":"Terugverdientijd (dagen)","value":"payback_days","precision":1}
    ]},
    {"label":"‚è±Ô∏è Tijdsinvestering","fields":[
      {"label":"Tijd per dag (minuten)","value":"time_per_day_minutes","precision":1},
    ]},
    {"label":"üåç Milieu-impact","fields":[
      {"label":"Wegwerpcapsules vermeden per jaar","value":"capsules_avoided_per_year","precision":0},
      {"label":"Afvalvermijding (kg/jaar)","value":"waste_avoided_kg_per_year","precision":2},
      {"label":"Geschatte CO‚ÇÇ-besparing (kg/jaar)","value":"co2_saved_kg_per_year","precision":1}
    ]}
  ],
  "layout":{"style":"cards","color_theme":"green","show_summary":true,"summary_template":"Door over te stappen op herbruikbare capsules bespaar je ‚Ç¨{{savings_per_year.toFixed(2)}} per jaar en voorkom je {{co2_saved_kg_per_year.toFixed(1)}} kg CO‚ÇÇ-uitstoot!"}
}
